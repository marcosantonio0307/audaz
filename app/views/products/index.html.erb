<div class="label">
	<span>Meus Produtos</span>
</div>

<div class="container-big">
	<input type="text" id="search" placeholder="Buscar Produto" style="float: right; margin-bottom: 1em;">
	<table class="table table-bordered" >
		<thead>
			<th>Id</th>
			<th>SKU</th>
			<th>Nome</th>
			<th>Quantidade</th>
			<th>Custo</th>
			<th>Pre√ßo</th>
			<th>Categoria</th>
			<th></th>
		</thead>
		<tbody id="table">
			<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= product.sku %></td>
				<td><%= product.name %></td>
				<td><%= product.amount %></td>
				<td><%= number_to_currency product.cost %></td>
				<td><%= number_to_currency product.price %></td>
				<td><%= product.category %></td>
				<td><%= link_to :ver, product_path(product), class: 'btn btn-primary' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<script type="text/javascript">
	$(function(){
	    $("#search").keyup(function(){
	        var texto = $(this).val();
	        $("#table tr").css("display", "table-row");
	        $("#table tr").each(function(){
	            if($(this).text().toUpperCase().indexOf(texto.toUpperCase()) < 0)
   				   $(this).css("display", "none");
	        });
	    });
	});
</script>