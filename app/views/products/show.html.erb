<div class="label">
	<span>Produto: <%= @product.id %></span>
</div>

<div class="container central options">
	<span><%= link_to 'todos produtos', products_path, class: 'btn btn-default' %></span>
	<span><%= link_to 'editar', edit_product_path(@product), class: 'btn btn-warning' %></span>
	<span><%= link_to 'entrada', add_amount_product_path(@product), class: 'btn btn-primary' %></span>
</div>

<div class="container central">
	<%= form_for @product do |f| %>

		<div class="form-group">
			<%= f.label :sku %>
			<%= f.text_field :sku, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :quantidade %>
			<%= f.number_field :amount, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :custo %>
			<%= f.text_field :cost, class: 'form-control', :disabled=>true %>
		</div>
