<div class="label">
	<span>Clinte: <%= @client.id %></span>
</div>

<div class="container central options">
	<span><%= link_to 'todos clientes', clients_path, class: 'btn btn-default' %></span>
	<span><%= link_to :editar, edit_client_path(@client), class: 'btn btn-warning' %></span>
</div>

<div class="container central">
	<%= form_for @client do |f| %>
		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :cpf %>
			<%= f.text_field :cpf, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :telefone %>
			<%= f.text_field :phone, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :email %>
			<%= f.text_field :email, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :endereco %>
			<%= f.text_field :address, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :cidade %>
			<%= f.text_field :city, class: 'form-control', :disabled=>true %>
		</div>
		<div class="form-group">
			<%= f.label :aniversario %>
			<%= f.date_field :birthday, class: 'form-control', :disabled=>true %>
		</div>
	<% end %>
</div>
