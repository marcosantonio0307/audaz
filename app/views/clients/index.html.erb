<div class="label">
	<span>Meus Clientes</span>
</div>

<div class="container-big">
	<input type="text" id="search" placeholder="Buscar Produto" style="float: right; margin-bottom: 1em;">
	<table class="table table-bordered">
		<thead>
			<th>Id</th>
			<th>Nome</th>
			<th>Anivers√°rio</th>
			<th>CPF/RG</th>
			<th>Telefone</th>
			<th>Cidade</th>
			<th></th>
		</thead>
		<tbody id="table">
			<% @clients.each do |client| %>
				<tr>
					<td><%= client.id %></td>
					<td><%= client.name %></td>
					<td><%= datebr(client.birthday) %></td>
					<td><%= client.cpf %></td>
					<td><%= client.phone %></td>
					<td><%= client.city %></td>
					<td><%= link_to :ver, client_path(client), class: 'btn btn-primary' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>	
</div>

<script type="text/javascript">
	$(function(){
	    $("#search").keyup(function(){
	        var texto = $(this).val();
	        $("#table tr").css("display", "table-row");
	        $("#table tr").each(function(){
	            if($(this).text().toUpperCase().indexOf(texto.toUpperCase()) < 0)
   				   $(this).css("display", "none");
	        });
	    });
	});
</script>