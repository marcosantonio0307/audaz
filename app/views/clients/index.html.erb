<div class="label">
	<span>Meus Clientes</span>
</div>

<div class="container-big">
	<table class="table table-bordered">
		<thead>
			<th>Id</th>
			<th>Nome</th>
			<th>Anivers√°rio</th>
			<th>CPF/RG</th>
			<th>Telefone</th>
			<th>Cidade</th>
			<th></th>
		</thead>
		<tbody>
			<% @clients.each do |client| %>
				<tr>
					<td><%= client.id %></td>
					<td><%= client.name %></td>
					<td><%= datebr(client.birthday) %></td>
					<td><%= client.cpf %></td>
					<td><%= client.phone %></td>
					<td><%= client.city %></td>
					<td><%= link_to :ver, client_path(client), class: 'btn btn-primary' %></td>
				</tr>
			<% end %>
		</tbody>
	</table>	
</div>