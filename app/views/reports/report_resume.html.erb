<div class="label">
	<span><%= @title %></span>
</div>

<div class="row container-big">
	<div class="col-lg-12 col-md-12">
		<p><input type='button' value='Voltar' onclick='history.go(-1)' class="btn btn-default" /></p>
		<div class="box-resume">
			<h2>Vendas do Periodo</h2><br>
			<h3><b>Nº de Vendas:</b> <%= @sales.count %></h3>
			<h3><b>Total:</b> <%= moneybr(@total_sales) %></h3>
		</div>
		<div class="box-resume">
			<h2>Despesas do Periodo</h2><br>
			<h3><b>Nº de Despesas:</b> <%= @expenses.count %></h3>
			<h3><b>Total:</b> <%= moneybr(@total_expenses) %></h3>
		</div>
		<div class="box-resume liq">
			<br><br>
			<h2><b>Total liquido</b></h2>
			<h3><b><%= moneybr(@total_resume) %></b></h3>
		</div>
	</div>
</div><br>

<div class="row container-big">
	<div class="col-lg-6 col-md-6">
		<h1 align="center">Vendas</h1>
		<table class="table table-bordered">
			<thead>
				<th>Nº</th>
				<th>Data</th>
				<th>Valor</th>
			</thead>
			<tbody>
				<% @sales.each do |sale| %>
				<tr>
					<td><%= sale.id %></td>
					<td><%= datebr(sale.created_at) %></td>
					<td><%= moneybr(sale.total) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-lg-6 col-md-6">
		<h1 align="center">Despesas</h1>
		<table class="table table-bordered">
			<thead>
				<th>Nº</th>
				<th>Data</th>
				<th>Valor</th>
			</thead>
			<tbody>
				<% @expenses.each do |expense| %>
				<tr>
					<td><%= expense.id %></td>
					<td><%= datebr(expense.created_at) %></td>
					<td><%= moneybr(expense.total) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>