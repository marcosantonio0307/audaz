<div class="container-small">
  <div style="margin-left: 60px; margin-bottom: 1em;">
    <%= image_tag 'login.png', :width=>'100px' %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :usuario %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :senha %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :me_lembre %>
      </div>
    <% end %>

    <div class="actions">
      <p style="margin-left: 70px; margin-top: 1em;"><%= f.submit "Entrar", class: 'btn btn-success' %></p>
    </div>
  <% end %>
</div>